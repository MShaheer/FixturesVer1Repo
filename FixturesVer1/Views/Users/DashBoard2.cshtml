                        </div>
                    </div><! --/col-md-4 -->
</a>


            </div>
            <div class="row mt">

                @*PROFILE*@

                <a href="/users/profile">
                <div class="col-lg-6 col-md-6 col-sm-6 mb">
                    <div class="steps pn">
                        <img src="~/Content/about-img9.jpg" style="width :450px;height:200px"  />
                      <input type='submit' value='PROFILE' id='submit' />
                    </div>
                </div><! --/col-md-4 -->
                    </a>

                @*YOUR LISTING*@

                <a href="/properties/browselisting">
                    <div class="col-lg-6 col-md-6 col-sm-6 mb">
